<section id="track">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h5>
                    <strong>
                        Track your package
                    </strong>
                </h5>
                
                <p>
                    <a href="/item_requests/<%= @bid.item_request.id%>">
                        <i class="fas fa-angle-left"></i>
                        <%= @bid.item_request.item_name %>
                    </a>
                </p>
                
                <div style="margin-top: 30px;">
                    <%= render "shared/tracker" %>
                </div>
                
                <hr>
                
                <p>
                    For additional help, please reach out to
                    <a href="/partner/<%= @bid.partner.url_name %>"><%= @bid.partner.first_name %></a>
                    directly via <a href="mailto:<%= @bid.partner.email%>">email</a>.
                    To reach out to our team, send us an email at
                    <%= sanitize team_email %>.
                </p>
            </div>
        </div>
    </div>
</section>