<section id="bids">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="margin-bottom: 15px;">
                <h5>
                    <strong>
                        Bids
                    </strong>
                </h5>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <h6>
                    <a href="/item_requests/<%= params[:item_request_id] %>">
                        <i class="fas fa-angle-left"></i>
                        <%= @ir.item_name %>
                    </a>
                </h6>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
        
        <% if @bids.present? %>
            <div class="row">
                <% @bids.each do |b| %>
                    <div class="col-md-3" style="margin-bottom: 30px;">
                        <a href="/item_requests/<%= params[:item_request_id] %>/bids/<%= b.id %>">
                            <div class="card">
                                <div class="card-body" style="padding: 0; height: auto; overflow: hidden;">
                                    <div id="carouselExampleControls<%= b.id %>" class="carousel slide carousel-fade" data-ride="carousel">
                                        <div class="carousel-inner" style="width: 100% !important; height: 100%; background-color: #e7e7e9;">
                                            <% b.images.each.with_index do |img, idx| %>
                                                <div class="carousel-item <%= "active" if idx == 0 %>"
                                                    data-interval="10000000">
                                                    <div class="row">
                                                        <div class="col-md-12" align="center"
                                                            style="background-image: url('<%= img %>');
                                                                background-size: cover;
                                                                background-position: center;">
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleControls<%= b.id %>"
                                            role="button" data-slide="prev">
                                            <button class="btn btn-light" style="height: 35px !important;">
                                                <span class="sr-only">Previous</span>
                                                <i class="fas fa-angle-left"></i>
                                            </button>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleControls<%= b.id %>"
                                            role="button" data-slide="next" class="btn btn-light">
                                            <button class="btn btn-light" style="height: 35px !important;">
                                                <span class="sr-only">Previous</span>
                                                <i class="fas fa-angle-right"></i>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                                
                                <% if b.accepted %>
                                    <button class="btn btn-block" disabled
                                        style="border-radius: inherit !important;
                                            border-top-left-radius: 0 !important;
                                            border-top-right-radius: 0 !important;
                                            height: 60px !important;">
                                        Bid Accepted
                                    </button>
                                <% else %>
                                    <%= link_to item_request_bid_path(b.item_request, b),
                                        class:"no-decoration" do %>
                                        <button class="btn btn-block"
                                            style="border-radius: inherit !important;
                                                border-top-left-radius: 0 !important;
                                                border-top-right-radius: 0 !important;
                                                height: 60px !important;">
                                            Details
                                        </button>
                                    <% end %>
                                <% end %>
                            </div>
                        </a>
                    </div>
                <% end %>
            </div>
        <% end %>
        
        <div style="width: 100%; margin-top: 15px;" align="center">
            <div class="digg_pagination">
                <div class="page_info">
                  <%= page_entries_info @bids %>
                </div>
                
                <div align="center">
                    <%= will_paginate @bids %>
                </div>
            </div>
        </div>
    </div>
</section>